<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lyj.core.mapper.MessageMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.lyj.core.entity.Message">
        <id column="id" property="id"/>

        <result column="me_id" property="meId"/>
        <result column="talk_user_id" property="talkUserId"/>
        <result column="msg" property="msg"/>
        <result column="type" property="type"/>
        <result column="status" property="status"/>
        <result column="parent_id" property="parentId"/>
        <result column="create_time" property="createTime"/>

    </resultMap>


    <!-- 通用查询结果列   -->
    <sql id="Base_Column_List">
        id,
        me_id,
        msg,
        talk_user_id,
        parent_id,
        create_time,
        status
    </sql>

    <select id="selectOneByMeAndTalkUserId" resultType="integer">
        select parent_id from tb_message where me_id =#{meId} and talk_user_id=#{talkToUserId} order by id ASC limit 1
    </select>


    <!--
    select
        <include refid="Base_Column_List"/>
        from (
        select
        <include refid="Base_Column_List"/>
        from tb_message m
        where
        (
        me_id=#{meId}
        and
        talk_user_id=#{talkToUserId}
        )
        or
        (
        me_id=#{talkToUserId}
        and
        talk_user_id=#{meId}
        )
        order by DESC create_time
        )
        order by ASC id
    -->

    <select id="listHis" parameterType="integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_message m
        where
        (
        me_id=#{meId}
        and
        talk_user_id=#{talkToUserId}
        )
        or
        (
        me_id=#{talkToUserId}
        and
        talk_user_id=#{meId}
        )
    </select>

    <select id="son" resultMap="SON_RESULT" parameterType="integer">
        select
        <include refid="Base_Column_List"/>
        from tb_message where parent_id=#{id}
    </select>
</mapper>
